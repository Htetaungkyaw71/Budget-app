<p style="color: green"><%= notice %></p>

<%= render @group %>

<div>
  <%= link_to "Back to groups", groups_path %>
  <% if can? :edit, @group %>
      <%= link_to "Edit this group", edit_group_path(@group) %> |
      <% end %>
    <% if can? :destroy, @group %>
   <%= button_to "Destroy this group", @group, method: :delete %>
      <% end %>
 
    

  <h1>Entities</h1>
  <h2>Total <%= @group.total %> </h2>

  <div id="entities">
    <% @entities.each do |entity| %>p
      <%= render entity %>
      <p>
      <% if can? :edit, entity %>
        <%= link_to "Edit this entity", edit_group_entity_path(@group,entity) %> |
      <% end %>
      <% if can? :destroy, entity %>
        <%= button_to "Destroy this entity",  group_entity_path(@group,entity) , method: :delete %>   
      <% end %>
      </p>
    <% end %>
  </div>


  <%= link_to "New entity", new_group_entity_path(@group) %>


</div>
